<% layout("layouts/boilerplate") %> 

<section class="countries" id="countries">
    <div class="max-width">
        <h2 class="title">Stats by country</h2>
        <div class="table">
            <table>
                <thead>
                    <th>Country</th>
                    <th>Total Cases</th>
                    <th>Total Deaths</th>
                    <th>Total Recovered</th>
                </thead>
                <tbody>
                    <% for(countries of countries) {%>
                    <tr> 
                    <td><%= countries.Country %> </td>
                    <td><%= countries.TotalConfirmed %> </td>
                    <td><%= countries.TotalDeaths %></td>
                    <td><%= countries.TotalRecovered %></td> 
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</section>

<script src="/javascripts/clusterMap.js"></script>
